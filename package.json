{
  "private": true,
  "scripts": {
    "clean": "rm -rf public/assets/css",
    "uno": "unocss \"site/{layouts,snippets,templates}/**/*\" --out-file src/uno.css",
    "sass": "sass --style=compressed src/main.scss public/assets/css/main.css",
    "dev": "npm run clean && concurrently \"npm run uno -- --watch\" \"npm run sass -- --watch\"",
    "build": "npm run clean && npm run uno && npm run sass -- --no-source-map && hashup --ext css public/assets"
  },
  "dependencies": {
    "duecss": "^0.26.0"
  },
  "devDependencies": {
    "@unocss/cli": "^0.44.4",
    "@unocss/core": "^0.44.4",
    "@unocss/preset-wind": "^0.44.4",
    "concurrently": "^7.3.0",
    "hashup": "^0.4.2",
    "prettier": "^2.7.1",
    "sass": "^1.53.0",
    "unocss": "^0.44.4"
  }
}
